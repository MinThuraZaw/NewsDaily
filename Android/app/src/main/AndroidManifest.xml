<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.newsdaily">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/newsicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/newsicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity" android:theme="@style/MainTheme"></activity>
        <activity android:name=".news_activities.BusinessActivity" android:theme="@style/MainTheme"></activity>
        <activity android:name=".news_activities.GeneralActivity" android:theme="@style/MainTheme"></activity>
        <activity android:name=".news_activities.EntertainmentActivity" android:theme="@style/MainTheme"></activity>
        <activity android:name=".news_activities.HealthActivity" android:theme="@style/MainTheme"></activity>
        <activity android:name=".news_activities.ScienceActivity" android:theme="@style/MainTheme"></activity>
        <activity android:name=".news_activities.SportsActivity"  android:theme="@style/MainTheme"></activity>
        <activity android:name=".news_activities.TechnologyActivity" android:theme="@style/MainTheme"></activity>

        <activity android:name=".activities.AboutActivity" android:theme="@style/MainTheme"/>
        <activity android:name=".activities.SplashScreenActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>